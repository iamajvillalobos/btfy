<div class="card">
  <div class="card-body">
    <div class="row">
      <% features.in_groups_of(4).each_with_index do |features, index| %>
        <div class="col-12 col-md-4 <%= index < 2 ? 'border-right' : '' %>">
          <ul class="list-group list-group-flush">
            <% features.each do |feature| %>
              <li class="list-group-item d-flex align-items-center justify-content-between px-0">
                <small><%= feature == "Developer API" ? feature : feature.titleize %></small>
                <svg height="20" width="20" class="text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>