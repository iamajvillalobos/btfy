<section class="py-5 bg-dark">
  <div class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 text-center mb-5">
          <h6 class="text-uppercase text-success font-weight-bold">
              Choose your plan
          </h6>
          <h3 class="display-3 font-weight-bold text-white">
            Simple pricing
          </h3>
          <p class="lead text-muted">
            Use it for free. Upgrade to enable custom domains, branded links
            and full access analytics. No limits.
          </p>
        </div>
      </div>

      <div class="row">
        <% UserPlan.order(amount: :asc).each do |plan| %>
          <%= render MarketingPriceCardComponent.new(plan) %>
        <% end %>
      </div>

      <div class="row justify-content-center">
        <div class="col-12 col-md-6 text-center">
          <div class="pt-5">
            <%= link_to "/register",
              class: "btn btn-lg btn-secondary" do %>
              Register for free
              <span class="icon ml-1">
                <svg fill="none" height="1rem" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </span>
            <% end %>
            <h6 class="text-uppercase text-secondary mt-3">
              no credit card required
            </h6>
          </div>
        </div>
      </div>
  </div>
</section>