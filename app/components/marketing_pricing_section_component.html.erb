<section class="py-5 bg-dark">
  <div class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 text-center mb-5">
          <h6 class="text-uppercase text-warning font-weight-bold">
              Choose your plan
          </h6>
          <h3 class="display-3 font-weight-bold text-white">
            Simple pricing
          </h3>
          <p class="lead text-muted">
            Use it for free. Upgrade to enable custom domains, branded links
            and full access analytics. No limits.
          </p>
        </div>
      </div>

      <div class="row">
        <% UserPlan.order(amount: :asc).each do |plan| %>
          <%= render MarketingPriceCardComponent.new(plan) %>
        <% end %>
      </div>
  </div>
</section>