<div class="py-5">
  <section class="py-5">
    <div class="container">
      <!-- Introduction -->
      <div class="row justify-content-center">
        <div class="col-12 col-md-6 text-center mb-5">
          <h6 class="text-uppercase text-primary">
            Introducing btfy
          </h6>
          <h1 class="display-1 font-weight-bold">
            The link shortener tool you'll enjoy using
          </h1>
          <p class="lead text-black-50 mb-5">
            We created a simple and easy-to-use link platform for everything
            you need to create and manage links at scale
          </p>
          <%= link_to "/register", class: "btn btn-lg btn-primary" do %>
            Register for free
            <span class="icon ml-1">
              <svg fill="none" height="1rem" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </span>
          <% end %>
          <h6 class="text-uppercase text-primary mt-3">
            no credit card required
          </h6>
        </div>
        <!-- End of Introduction -->

        <!-- App Screenshot -->
        <div class="py-5">
          <div class="row">
            <div class="col-12">
              <div class="bg-light shadow-lg">
                <%= image_tag "dashboard", class: "img-fluid" %>
              </div>
            </div>
          </div>
        </div>
        <!-- End of App Screenshot -->
      </div>
    </div>
  </section>
</div>