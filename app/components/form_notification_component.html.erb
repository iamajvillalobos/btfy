<% if @model.errors.any? %>
  <div class="alert alert-light alert-dismissible fade show">
    <%= @model.errors.full_messages.to_sentence %>
    <button type="button" class="close" data-dismiss="alert">
      <span>&times;</span>
    </button>
  </div>
<% end %>

<% if flash.any? %>
  <div class="alert alert-light alert-dismissible fade show">
    <%= flash[:error] %>
    <button type="button" class="close" data-dismiss="alert">
      <span>&times;</span>
    </button>
  </div>
<% end %>

