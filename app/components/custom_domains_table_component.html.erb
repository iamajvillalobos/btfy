<div data-controller="domains">
  <div id="domains" class="card">
    <div class="card-header">
      <div class="input-group input-group-flush input-group-merge">
          <input type="search"
            class="search form-control form-control-prepended"
            placeholder="Search">
      </div>
    </div>
    <div class="table-responsive mb-0">
      <table class="table table-sm table-nowrap card-table">
        <thead>
          <tr>
            <th>Status</th>
            <th>Name</th>
            <th>Redirect URL</th>
            <th>404 URL</th>
            <th>Links</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="list">
          <% @domains.each do |domain| %>
            <tr>
              <td><%= domain.status %></td>
              <td class="name"><%= domain.name %></td>
              <td><%= domain.redirect_url %></td>
              <td><%= domain.not_found_url %></td>
              <td><%= domain.links.count %></td>
              <td class="text-right">
                <div class="dropdown">
                  <a href="#" class="dropdown-ellipses dropdown-toggle" data-toggle="dropdown">
                    <svg height="20" width="20" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                    </svg>
                  </a>
                  <div class="dropdown-menu dropdown-menu-left">
                    <%= link_to "Edit", edit_custom_domain_path(domain), class: "dropdown-item" %>
                    <%= link_to "Delete", custom_domain_path(domain),
                      method: :delete,
                      data: { confirm: "This will delete all links that you created with this domain, are you sure you want to delete?" },
                      class: "dropdown-item"
                    %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
