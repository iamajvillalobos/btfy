<% if flash.any? %>
  <div class="my-3">
    <% if flash[:notice] %>
      <div class="alert alert-light alert-dismissible fade show">
        <%= flash[:notice] %>
        <button type="button" class="close" data-dismiss="alert">
          <span>&times;</span>
        </button>
      </div>
    <% end %>

    <% if flash[:error] %>
      <div class="alert alert-danger alert-dismissible fade show">
        <%= flash[:error] %>
        <button type="button" class="close" data-dismiss="alert">
          <span>&times;</span>
        </button>
      </div>
    <% end %>
  </div>
<% end %>
