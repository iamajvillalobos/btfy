<div class="card h-100">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <small class="text-muted"><%= @label %></small>
      </div>
      <div class="col text-right">
        <small class="text-muted">Visits</small>
      </div>
    </div>
    <% @stats.each do |stat, count| %>
    <div class="row">
      <div class="col"><%= stat %></div>
      <div class="col text-right"><%= count %></div>
    </div>
    <% end %>
  </div>
</div>
