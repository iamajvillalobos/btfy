<div data-controller="links">
  <div id="links-table" class="card">
    <div class="card-header">
      <div class="input-group input-group-flush input-group-merge">
          <input type="search"
            class="search form-control form-control-prepended"
            placeholder="Search">
      </div>
    </div>
    <div class="table-responsive mb-0">
      <table class="table table-sm table-nowrap card-table">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="list">
          <% @links.each do |link| %>
            <tr>
              <td class="name">
                <% if @public_profile_links.include? link %>
                  <svg class="text-primary" height="20" width="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                <% end %>
                <%= link.name.truncate(50) %>
              </td>
              <td class="text-right">
                <div class="dropdown">
                  <a href="#" class="dropdown-ellipses dropdown-toggle" data-toggle="dropdown">
                    <svg height="20" width="20" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                    </svg>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right">
                    <%= link_to "View", link, class: "dropdown-item" %>
                    <%= link_to "Edit", edit_link_path(link), class: "dropdown-item" %>
                    <% if @public_profile_links.include? link %>
                      <%= link_to "Remove", public_profile_link_path(link), method: :delete, class: "dropdown-item" %>
                    <% else %>
                      <%= link_to "Add", public_profile_links_path(link_id: link), method: :post, class: "dropdown-item" %>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <%= render PagyNavComponent.new(@pagy) %>
    </div>
  </div>
</div>