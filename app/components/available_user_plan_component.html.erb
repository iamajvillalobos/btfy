<div class="card border"
  data-controller="subscription"
  data-subscription-vendor-id="<%= ENV['PADDLE_VENDOR_ID'] %>"
  data-subscription-user=<%= @user.to_json %>
  data-subscription-product-id=<%= @plan.paddle_plan_id %>
  data-subscription-settings-path=<%= account_path %>>
  <div class="card-body bg-light">
    <div class="row align-items-center">
      <div class="col">
        <h6 class="text-uppercase text-muted mb-2"><%= @plan.name %></h6>
        <span class="h2 mb-0">
          $<%= @plan.price %> <%= @plan.per_text %>
        </span>
      </div>
      <div class="col-auto">
        <button class="btn btn-sm btn-primary" data-action="subscription#subscribe">Subscribe</button>
      </div>
    </div>
  </div>
  <div class="card-footer px-0">
    <div class="list-group list-group-flush my-n3 small">
      <div class="list-group-item px-4 d-flex">
        <span>Links</span>
        <span class="ml-auto"><%= @plan.links_limit %></span>
      </div>
      <div class="list-group-item px-4 d-flex">
        <span class="mr-2">Custom Slug</span>
        <%= render SlugInfoTooltipComponent.new %>
        <span class="ml-auto"><%= @plan.custom_slug_limit %></span>
      </div>
      <div class="list-group-item px-4 d-flex">
        <span>Custom Domains</span>
        <span class="ml-auto"><%= @plan.custom_domains_limit %></span>
      </div>
      <div class="list-group-item px-4 d-flex">
        <span>Dashboard</span>
        <span class="ml-auto"><%= @plan.dashboard_access %></span>
      </div>
      <div class="list-group-item px-4 d-flex">
        <span>Link Analytics</span>
        <span class="ml-auto"><%= @plan.analytics_limit %></span>
      </div>
      <div class="list-group-item px-4 d-flex">
        <span>API Access</span>
        <span class="ml-auto">Yes</span>
      </div>
    </div>
  </div>
</div>