<ul class="list list-group list-group-flush list my-n3">
  <% @domains.each do |domain| %>
    <li class="list-group-item py-3">
      <div class="row align-items-center">
        <div class="col">
          <h4 class="mb-1 name"><%= domain.name %></h4>
        </div>
        <div class="col-auto">
          <%= link_to "Delete", custom_domain_path(domain),
            method: :delete, data: { confirm: "This will delete all links that you created with this domain, are you sure you want to delete?" },
            class: "btn btn-sm btn-white" %>
      </div>
    </li>
  <% end %>
</ul>
