<p id="notice"><%= notice %></p>

<h1>Custom Domains</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Redirect url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custom_domains.each do |custom_domain| %>
      <tr>
        <td><%= custom_domain.name %></td>
        <td><%= custom_domain.redirect_url %></td>
        <td><%= link_to 'Show', custom_domain %></td>
        <td><%= link_to 'Edit', edit_custom_domain_path(custom_domain) %></td>
        <td><%= link_to 'Destroy', custom_domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Custom Domain', new_custom_domain_path %>
