<div class="card">
  <div class="card-body">
    <%= form_with(model: link, local: true) do |form| %>
      <%= render(FormNotificationComponent.new(model: link)) %> 

      <div class="form-group">
        <%= form.label :destination_url, "Paste long URL" %>
        <small class="form-text text-muted">
          Don't forget to include http or https
        </small>
        <%= form.text_area :destination_url, class: "form-control" %>
      </div>

      <div class="row">
        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= form.label :custom_domain, "Domain" %>
            <small class="form-text text-muted">
              Choose from your domains
            </small>
            <%= form.select :custom_domain_id,
              custom_domain_dropdown,
              {},
              { class: "custom-select" }
            %>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= form.label :name %>
            <small class="text-muted">(Optional)</small>
            <small class="form-text text-muted">
              Give your link a name to search later
            </small>
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= form.label :slug%>
            <small class="text-muted">(Optional)</small>
            <small class="form-text text-muted">
              Customize the name after the slash
            </small>
            <%= form.text_field :slug, class: "form-control" %>
          </div>
        </div>
      </div>
      
      <div class="d-flex justify-content-between mt-3">
        <%= link_to "Cancel", links_path, class: "btn btn-white" %>
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
