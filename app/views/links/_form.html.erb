<% if no_domains %>
  <div class="alert alert-light">
    <i class="fe fe-info mr-1"></i> You must add a custom domain first,
    <%= link_to "create now", new_custom_domain_path %>.
  </div>
<% end %>

<div class="card">
  <div class="card-body">
    <%= form_with(model: link, local: true) do |form| %>
      <%= render(FormNotificationComponent.new(model: link)) %> 

      <div class="form-group">
        <%= form.label :name %>
        <small class="form-text text-muted">
          Give your link a name to search later
        </small>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :destination_url %>
        <small class="form-text text-muted">
          Put here the long URL you want to shorten
        </small>
        <%= form.text_area :destination_url, class: "form-control" %>
      </div>


      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="form-group">
            <%= form.label :custom_domain, "Domains" %>
            <small class="form-text text-muted">
              Choose from your domains
            </small>
            <%= form.select :custom_domain_id,
              current_user.custom_domains.map { |cd| [cd.name, cd.id] },
              {},
              { class: "custom-select" }
            %>
          </div>
        </div>

        <div class="col-12 col-lg-6">
          <div class="form-group">
            <%= form.label :slug%>
            <small class="form-text text-muted">
              Customize the url name after the slash
            </small>
            <%= form.text_field :slug, class: "form-control" %>
          </div>
        </div>
      </div>
      
      <div class="d-flex justify-content-between mt-3">
        <%= link_to "Cancel", links_path, class: "btn btn-white" %>
        <% if no_domains %>
          <%= form.submit class: "btn btn-primary", disabled: true %>
        <% else %>
          <%= form.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
