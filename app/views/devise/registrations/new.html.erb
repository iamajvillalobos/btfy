<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-5 col-xl-4 my-5">
      <div class="text-center mb-5">
        <%= render LogoComponent.new() %>
      </div>
      
      <h1 class="display-4 text-center mb-3">
        Sign up
      </h1>

      <p class="text-muted text-center mb-5">
        Access your dashboard.
      </p>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render(FormNotificationComponent.new(model: resource)) %>

        <div class="form-group">
          <%= f.label :email, "Email Address" %>
          <%= f.email_field :email, class: "form-control",
            placeholder: "name@address.com" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control",
            placeholder: "Enter your password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control",
            placeholder: "Confirm your password" %>
        </div>

        <%= f.submit "Sign up", class: "btn btn-lg btn-block btn-primary mb-3" %>

        <div class="text-center">
          <small class="text-muted text-center">
            Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %>.
          </small>
        </div>
      <% end %>
    </div>
  </div>
</div>