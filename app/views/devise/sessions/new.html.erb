<div class="row align-items-center justify-content-center no-gutters min-vh-100">
  <div class="col-12 col-md-5 col-lg-4 py-8 py-md-11">
    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
    <% end %>

    <div class="d-flex justify-content-center mb-2">
      <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><path d="M0 0h24v24H0z"/><rect fill="#335EEA" x="4" y="16" width="4" height="4" rx="1"/><rect fill="#335EEA" x="4" y="10" width="4" height="4" rx="1"/><rect fill="#335EEA" x="10" y="16" width="4" height="4" rx="1"/><rect fill="#335EEA" opacity=".3" x="10" y="10" width="4" height="4" rx="1"/><rect fill="#335EEA" x="4" y="4" width="4" height="4" rx="1"/><rect fill="#335EEA" x="16" y="16" width="4" height="4" rx="1"/></g></svg>
    </div>

    <h1 class="mb-0 font-weight-bold text-center">
      Sign in
    </h1>

    <p class="mb-6 text-center text-muted">
      Shorten your links in seconds.
    </p>

    <%= form_for(resource, as: resource_name,
      url: session_path(resource_name), html: { class: "mb-6"} ) do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true,
          class: "form-control",
          placeholder: "name@address.com"
        %>
      </div>

      <div class="form-group mb-5">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control",
          placeholder: "Enter your password"
        %>
      </div>

      <%= f.submit "Sign in", class: "btn btn-block btn-primary" %>
    <% end %>
    
    <p class="mb-0 font-size-sm text-center text-muted">
      Don't have an account yet? <%= link_to "Sign up", new_registration_path(resource_name) %>.
    </p>
  </div>
</div>

