<%= render SettingsHeaderComponent.new %>

<div class="row justify-content-start">
  <div class="col-12 col-md-8">
    <%= form_with model: @account, local: true do |f| %>
      <!-- Avatar -->
      <div class="row justify-content-between align-items-center">
        <div class="col">
          <div class="row align-items-center">
            <div class="col-auto">
              <div class="avatar">
                <%= image_tag @account.image, class: "avatar-img rounded-circle" %>
              </div>
            </div>
            <div class="col ml-n2">
              <h4 class="mb-1">Your avatar</h4>
              <small class="text-muted">PNG or JPEG, less than 5MB or it won't look good ðŸ˜†</small>
            </div>
          </div>
        </div>
        <div class="col-auto">
          <%= f.file_field :avatar, class: "form-control-file" %>
        </div>
      </div>
      <hr class="my-5">
      <!-- End of Avatar -->

      <!-- Details -->
      <div class="row">
        <div class="col-12 col-md-6">
          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <%= f.label :bio %>
            <small class="form-text text-muted">
              Tell us something about yourself in 160 characters or less
            </small>
            <%= f.text_area :bio, class: "form-control" %>
          </div>
        </div>
      </div>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
