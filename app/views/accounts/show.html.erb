<%= render SettingsHeaderComponent.new %>
<div class="row justify-content-start">
  <div class="col-12 col-md-6">
    <div class="card">
      <div class="card-body">
        <%= form_with model: @account, local: true do |f| %>
          <div class="form-group">
            <%= f.label :timezone, "Reporting Timezone" %>
            <%= f.time_zone_select :timezone, nil, { include_blank: true }, { class: "custom-select" } %>
          </div>
          <%= f.submit "Save", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>