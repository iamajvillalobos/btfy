<!DOCTYPE html>
<html>
  <head>
    <title>Btfy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% if current_page?(api_keys_path) %>
      <meta name="turbolinks-visit-control" content="reload">
    <% end %>
    <script src="https://cdn.paddle.com/paddle/paddle.js"></script>
    <%= render PlausibleAnalyticsComponent.new %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="pb-4">
    <% if current_user != true_user %>
      <div class="alert alert-danger rounded-0 mb-0">
        <div class="d-flex justify-content-between align-items-center">
          You are signed in as <%= current_user.email %>
          <%= link_to "Back to admin", stop_impersonating_admin_users_path,
            method: :post, class: "btn btn-sm btn-white" %>
        </div>
      </div>
    <% end %>
    <%= render(NavbarComponent.new(current_user: current_user)) %>
    <div class="container p-md-0">
      <%= yield %>
    </div>
  </body>
</html>
