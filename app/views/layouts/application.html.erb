<!DOCTYPE html>
<html>
  <head>
    <title>Btfy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
  </head>

  <body>
    <nav style="display:flex; padding-bottom: 1rem;">
      <%= link_to "Links", links_path %>
      <%= link_to "Domains", custom_domains_path, { style: "margin-left: 1rem;" } %>

      <% if current_user %>
        <%= link_to "Billing", billing_path, { style: "margin-left: 1rem;" } %>
        <div style="margin-left: auto;">
          <%= link_to "Sidekiq", "/sidekiq", { style: "margin-right: 1rem;" }%> 
          <%= link_to "Sign out", destroy_user_session_path, { style: "margin-left: auto;", method: :delete } %>
        </div>
      <% else %>
        <%= link_to "Log in", new_user_session_path, { style: "margin-left: auto;" } %>
      <% end %>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <%= yield %>

    <script src="https://cdn.paddle.com/paddle/paddle.js"></script>
    <script type="text/javascript">
      Paddle.Setup({ vendor: 118869 });
    </script>
  </body>
</html>
