<div class="vh-100 d-flex align-items-center bg-auth border-top border-top-2 border-primary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-5 col-xl-4 my-5">
        <div class="text-center mb-5">
          <%= render LogoComponent.new() %>
        </div>
        <h1 class="display-4 text-center mb-3">
          Sign in to Admin
        </h1>

        <p class="text-muted text-center mb-5">
          Welcome back Admin! Good to see you again.
        </p>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <% if flash[:alert ] %>
            <div class="alert alert-light alert-dismissible fade show">
              <%= flash[:alert] %>
              <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
              </button>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, class: "form-control",
              placeholder: "name@address.com" %>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col">
                <%= f.label :password %>
              </div>
            </div>
            
            <%= f.password_field :password, class: "form-control",
              placeholder: "Enter your password" %>
          </div>

          <%= f.submit "Sign in", class: "btn btn-lg btn-block btn-primary mb-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>